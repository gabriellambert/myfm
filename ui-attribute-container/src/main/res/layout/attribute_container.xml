<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/technical_title"
        style="@style/PlayerDetails.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÃ‰CNICOS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/technical_attributes_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/technical_title">

        <LinearLayout
            android:id="@+id/technical_attributes_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/heading_attribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_27"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp">

                <TextView
                    android:id="@+id/heading_text"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/attribute_heading_text" />

                <TextView
                    android:id="@+id/heading_value"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/attribute_default_value" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/corners_attribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp">

                <TextView
                    android:id="@+id/corners_text"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/attribute_corners_text" />

                <TextView
                    android:id="@+id/corners_value"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/attribute_default_value" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/crossing_attribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_27"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp">

                <TextView
                    android:id="@+id/crossing_text"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/attribute_crossing_text" />

                <TextView
                    android:id="@+id/crossing_value"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/attribute_default_value"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tackling_attribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp">

                <TextView
                    android:id="@+id/tackling_text"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/attribute_tackling_text" />

                <TextView
                    android:id="@+id/tackling_value"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/attribute_default_value"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/finishing_attribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_27"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp">

                <TextView
                    android:id="@+id/finishing_text"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/attribute_finishing_text" />

                <TextView
                    android:id="@+id/finishing_value"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/attribute_default_value"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dribbling_attribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp">

                <TextView
                    android:id="@+id/dribbling_text"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/attribute_dribbling_text" />

                <TextView
                    android:id="@+id/dribbling_value"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/attribute_default_value"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/longThrows_attribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_27"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp">

                <TextView
                    android:id="@+id/long_throws_text"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/attribute_long_throws_text" />

                <TextView
                    android:id="@+id/longThrows_value"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/attribute_default_value"
                    android:textAlignment="textEnd" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/technical_attributes_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginEnd="1dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/freeKickTacking_attribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_27"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp">

                <TextView
                    android:id="@+id/free_kick_tacking_text"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/attribute_free_kick_tacking_text" />

                <TextView
                    android:id="@+id/freeKickTacking_value"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/attribute_default_value"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/marking_attribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp">

                <TextView
                    android:id="@+id/marking_text"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/attribute_marking_text" />

                <TextView
                    android:id="@+id/marking_value"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/attribute_default_value"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/penaltyTaking_attribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_27"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp">

                <TextView
                    android:id="@+id/penalty_text"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/attribute_penalty_text" />

                <TextView
                    android:id="@+id/penaltyTaking_value"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/attribute_default_value"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/passing_attribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp">

                <TextView
                    android:id="@+id/passing_text"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/attribute_passing_text" />

                <TextView
                    android:id="@+id/passing_value"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/attribute_default_value"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/firstTouch_attribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_27"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp">

                <TextView
                    android:id="@+id/first_touch_text"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/attribute_first_touch_text" />

                <TextView
                    android:id="@+id/firstTouch_value"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/attribute_default_value"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/longShots_attribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp">

                <TextView
                    android:id="@+id/long_shots_text"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/attribute_long_shots_text" />

                <TextView
                    android:id="@+id/longShots_value"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/attribute_default_value"
                    android:textAlignment="textEnd" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/technique_attribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_27"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="1dp">

                <TextView
                    android:id="@+id/technique_text"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/attribute_technique_text" />

                <TextView
                    android:id="@+id/technique_value"
                    style="@style/PlayerDetails.AttributesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/attribute_default_value"
                    android:textAlignment="textEnd" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>