<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PlayerDetails.Name" parent="" >
        <item name="android:textSize">@dimen/text_header_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/margin_32</item>
    </style>

    <style name="PlayerDetails.Title" parent="" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">32dp</item>
    </style>

    <style name="PlayerDetails.Nationality_Age" parent="" >
        <item name="android:textSize">@dimen/text_header_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">@dimen/margin_32</item>
    </style>

    <style name="PlayerDetails.HeightWeight" parent="" >
        <item name="android:textSize">@dimen/text_header_12</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayerDetails.AttributesText" parent="">
        <item name="android:textSize">@dimen/text_header_12</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PositionFilter.Button" parent="Widget.Material3.Button.TextButton" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="icon">@drawable/ic_arrow_drop_down</item>
        <item name="iconTint">@color/primary_yellow</item>
        <item name="rippleColor">@color/light_grey</item>
    </style>

    <style name="PositionFilter.Menu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_background</item>
    </style>
</resources>